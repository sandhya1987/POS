        </Grid>
        <DataGrid  SelectionMode="Single" ItemsSource="{Binding ListGridItem, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedItem}"  RowHeight="28"   Cursor="Hand"  BorderBrush="#dddddd" BorderThickness="1"  IsReadOnly="True" AutoGenerateColumns="False"     x:Name="dataGrid1" Margin="10,170,0,0" VerticalAlignment="Top"  AlternationCount="2" ColumnHeaderHeight="40" FontFamily="Verdana" Background="White" FontWeight="Normal" HorizontalContentAlignment="Center" FontSize="12" HorizontalGridLinesBrush="#dddddd" VerticalGridLinesBrush="#dddddd" TextBlock.TextAlignment="Center" Height="236">
            <DataGrid.Style>
                <Style TargetType="{x:Type DataGrid}">
                    <Setter Property="AlternatingRowBackground" Value="#ffffff"/>
                    <Setter Property="RowBackground" Value="#f9f9f9"/>
                    <Setter Property="BorderBrush" Value="#dddddd"/>
                    <Setter Property="FontWeight" Value="Normal"/>
                    <Setter Property="TextBlock.TextAlignment" Value="Center" />
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontWeight" Value="Normal"/>
                </Style>
            </DataGrid.Style>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#ffffff" />
                            <Setter Property="FontWeight" Value="Normal" />
                            <Setter Property="BorderBrush" Value="#dddddd"/>
                            <Setter Property="Background" Value="Red" />
                            <Setter Property="TextBlock.TextAlignment" Value="Center"/>

                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn     Width="75" MaxWidth="300" Header="Sl.No" TextBlock.Foreground="Red" Binding="{Binding SLNO}"  FontFamily="Verdana"  TextBlock.TextAlignment="Center" SortDirection="Ascending" CanUserSort="False" />
                <!--<DataGridTemplateColumn Header="Image"  Visibility="{Binding IMAGE_VISIBLE, Converter={StaticResource BoolToVis}}" Width="SizeToCells" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Name="ImgSource" Source="{Binding IMAGE_PATH}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>-->

                <!--<DataGridTextColumn     Width="150" MaxWidth="155" Header="Image" Visibility="{Binding IMAGE_VISIBLE}" Binding="{Binding ITEM_IMAGE}"  />-->
                <DataGridTextColumn     Width="150" MaxWidth="155" Header="BarCode" Binding="{Binding BARCODE}"  />
                <DataGridTextColumn   Width="200" Header="Item Name"  Binding="{Binding ITEM_NAME}"/>
                <DataGridTextColumn   Width="200" Header="Search Code"  Binding="{Binding SEARCH_CODE}"/>
                <DataGridTextColumn   Width="200" Header="Sale Quantity"  Binding="{Binding Current_Qty}"/>
                <DataGridTextColumn   Width="200" Header="MRP"  Binding="{Binding MRP, StringFormat=\{0:c\}}"/>
                <DataGridTextColumn   Width="200" Header="Sales Price"  Binding="{Binding SALES_PRICE, StringFormat=\{0:c\}}"/>
                <DataGridTextColumn   Width="200" Header="Sales Measuring Unit"  Binding="{Binding SALES_UNIT}"/>
                <DataGridTextColumn   Width="200" Header="Purchase Measuring Unit"  Binding="{Binding PURCHASE_UNIT}"/>
                <DataGridTextColumn   Width="200" Header="Modified By"  Binding="{Binding MODIFIED_BY}"/>
                <DataGridTextColumn   Width="200" Header="Modification Date"  Binding="{Binding MODIFICATION_DATE}"/>
                <DataGridTextColumn   Width="200" Header="Category Name"  Binding="{Binding CATEGORY_NAME}"/>
                <DataGridTextColumn   Width="200" Header="Display Index"  Binding="{Binding DISPLAY_INDEX}"/>
                <DataGridTextColumn   Width="200" Header="Item Group Name"  Binding="{Binding ITEM_GROUP_NAME}"/>
                <DataGridTextColumn   Width="200" Header="Name in Regional Language"  Binding="{Binding REGIONAL_LANGUAGE}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Margin="0,437,10,0" Height="238" VerticalAlignment="Top" HorizontalAlignment="Right" Width="426">
            <TextBlock HorizontalAlignment="Right" Margin="0,-5,275,0" TextWrapping="Wrap" Text="Retunable Amount : " VerticalAlignment="Top"/>
