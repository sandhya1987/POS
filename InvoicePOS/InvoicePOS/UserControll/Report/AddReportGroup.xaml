            <TreeView  x:Name="tv" ItemsSource="{Binding ListGrid}">
                <TreeView.ItemContainerStyle>
                  
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                        <Setter Property="FontWeight" Value="Normal" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="FontWeight" Value="Bold" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TreeView.ItemContainerStyle>

                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding GROUP_NAME}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="275" Margin="270,10,0,0" VerticalAlignment="Top" Width="312">
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="2,10,0,0" TextWrapping="Wrap" Text="Report Group Name" VerticalAlignment="Top" Width="110" Height="33"/>
