            <TextBlock x:Name="textBlock_Copy"  HorizontalAlignment="Left" Margin="45,48,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Width="67" Height="22"/>
            <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="23" Margin="117,47,0,0" TextWrapping="Wrap" Text="{Binding DESCRIPTION}" VerticalAlignment="Top" Width="173"/>
            <Button x:Name="button" Content="Save" Command="{Binding InsertReportGroup}" HorizontalAlignment="Left" Margin="112,245,0,0" VerticalAlignment="Top" Width="75"/>
