                        <ComboBox HorizontalAlignment="Left" Margin="164,212,0,0" Text="{Binding Path=GENDER}"  ItemsSource="{Binding UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120">
