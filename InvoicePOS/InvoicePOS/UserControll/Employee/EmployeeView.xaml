                <TextBox HorizontalAlignment="Left" IsReadOnly="True" Height="23" Margin="737,77,0,0" TextWrapping="Wrap"  Text="{Binding SelectedEmployee.MOBILE_NO}" VerticalAlignment="Top" Width="120"/>
                <TextBox HorizontalAlignment="Left" IsReadOnly="True" Height="23" Margin="737,110,0,0" TextWrapping="Wrap"  Text="{Binding SelectedEmployee.FAX_NO}" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Left" Margin="661,147,0,0" TextWrapping="Wrap" Text="Webside" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" IsReadOnly="True" Height="23" Margin="737,142,0,0" TextWrapping="Wrap"  Text="{Binding SelectedEmployee.WEBSITE}" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Left" Margin="359,185,0,0" TextWrapping="Wrap" Text="Working Shipt" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" IsReadOnly="True" Height="23" Margin="472,178,0,0" TextWrapping="Wrap"  Text="{Binding SelectedEmployee.WORKING_SHIFT}" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Left" Margin="386,267,0,0" TextWrapping="Wrap" Text="Sales Commission percent " VerticalAlignment="Top"/>
                <TextBlock HorizontalAlignment="Left" Margin="385,295,0,0" TextWrapping="Wrap" Text="Commission quick position" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" IsReadOnly="True" Height="23" Margin="174,112,0,0" TextWrapping="Wrap"  Text="{Binding SelectedEmployee.LAST_NAME}" VerticalAlignment="Top" Width="140"/>
                <TextBlock HorizontalAlignment="Left" Margin="97,112,0,0" TextWrapping="Wrap" Text="Last Name" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" IsReadOnly="True" Height="23" Margin="553,267,0,0" TextWrapping="Wrap"  Text="{Binding SelectedEmployee.SALES_PERCENT}" VerticalAlignment="Top" Width="120"/>
                <TextBox HorizontalAlignment="Left" IsReadOnly="True" Height="23" Margin="553,295,0,0" TextWrapping="Wrap"  Text="{Binding SelectedEmployee.COMMISSION_QUICK_POSITION}" VerticalAlignment="Top" Width="120"/>
                <TextBox HorizontalAlignment="Left" IsReadOnly="True" Height="23" Margin="553,323,0,0" TextWrapping="Wrap"  Text="{Binding SelectedEmployee.MAX_SPOT_DISCOUNT}" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Left" Margin="397,323,0,0" TextWrapping="Wrap" Text="Maximun Sport Discount" VerticalAlignment="Top"/>
                <Button Content="Cancel"   Command="{Binding Cancel, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="632,444,0,0" VerticalAlignment="Top" Width="75" Height="53"/>
            </Grid>
        </Border>
    </Grid>
</Window>
