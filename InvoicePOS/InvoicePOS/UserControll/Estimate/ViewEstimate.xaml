                    <TextBox x:Name="textBlock43"  Text="{Binding TotalPrice}" HorizontalAlignment="Left" Height="25" Margin="280,266,0,-260" TextWrapping="Wrap"  VerticalAlignment="Top" Width="205" Grid.Column="4"/>
