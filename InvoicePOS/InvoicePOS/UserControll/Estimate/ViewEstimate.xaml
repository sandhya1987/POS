                            <DataGridTextColumn    Header="Total " Binding="{Binding TotalPrice}" Width="100"/>
                            <DataGridTextColumn    Header="TaxType" Binding="{Binding TaxGrandTotal}" Width="100"/>
                            <DataGridTextColumn    Header="Tax Percent" Binding="{Binding TotalItemQty}" Width="100"/>
                            <DataGridTextColumn    Header="Unit price" Binding="{Binding CustomerName}" Width="100"/>
                            <DataGridTextColumn    Header="Qty/Weight" Binding="{Binding InnnvoiceNote}" Width="100"/>
                            <DataGridTextColumn    Header="Measuring Unit" Binding="{Binding HoldNote}" Width="100"/>
                            <DataGridTextColumn    Header="Discount Amount" Binding="{Binding EmployeeLogin}" Width="100"/>
                            <DataGridTextColumn    Header="Spot Discount Reason" Binding="{Binding CashRegister}" Width="100"/>
                            <DataGridTextColumn    Header="Total" Binding="{Binding SalesExecutiveName}" Width="100"/>
