<UserControl x:Class="InvoicePOS.UserControll.DashBoard.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="1050" Height="920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,100,0,0">
            <ComboBox Height="30" Width="200">
                <ComboBoxItem IsSelected="True">Pending Invoices</ComboBoxItem>
                <ComboBoxItem >Pending Payment</ComboBoxItem>
                <ComboBoxItem>Top Product</ComboBoxItem>
                <ComboBoxItem>Top Customer</ComboBoxItem>
                <ComboBoxItem>Recent Invoices</ComboBoxItem>
                <ComboBoxItem>Top Vendor</ComboBoxItem>
                <ComboBoxItem>Pending Purchase Order</ComboBoxItem>
                <ComboBoxItem>Stock List</ComboBoxItem>
            </ComboBox>
        </Grid>
    </Grid>
</UserControl>
