                    <Style TargetType="DataGrid">
                        <Setter Property="AlternatingRowBackground" Value="#ffffff"/>
                        <Setter Property="RowBackground" Value="#f9f9f9"/>
                        <Setter Property="BorderBrush" Value="#dddddd"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Setter Property="TextBlock.TextAlignment" Value="Center" />
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                    </Style>
                </DataGrid.Style>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#ffffff" />
                                <Setter Property="FontWeight" Value="Normal" />
                                <Setter Property="BorderBrush" Value="#dddddd"/>
                                <Setter Property="Background" Value="Red" />
                                <Setter Property="TextBlock.TextAlignment" Value="Center"/>

                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn   Width="120" Header="Date"  Binding="{Binding INVOICE_DATE}"/>
                    <DataGridTextColumn   Width="120" Header="Invoice No."  Binding="{Binding INVOICE_NO}"/>
                    <DataGridTextColumn   Width="200" Header="Customer Code" Binding="{Binding CUSTOMER_NUMBER}"  />
                    <DataGridTextColumn   Width="200" Header="Customer Name" Binding="{Binding CUSTOMER_NAME}"  />
                    <DataGridTextColumn   Width="200" Header="Total Amount" Binding="{Binding TOTAL_AMOUNT}"  />
                    <DataGridTextColumn   Width="200" Header="Pending Amount" Binding="{Binding PENDING_AMOUNT}"  />
                </DataGrid.Columns>
            </DataGrid>
        </TabItem>
