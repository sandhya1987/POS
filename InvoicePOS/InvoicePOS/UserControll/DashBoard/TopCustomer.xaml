<Window x:Class="InvoicePOS.UserControll.Dashboard.TopCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TopCustomer" Height="576" Width="919"
        xmlns:my="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit">

    <Grid Height="491" VerticalAlignment="Top">
        <my:Chart  Name="AreaChart1" Title="Top Customer" Margin="18,37,0,231" HorizontalAlignment="Left" Width="372">
            <my:PieSeries DependentValuePath="Value"
            IndependentValueBinding="{Binding Path=Key}" ItemsSource="{Binding Path=Value}" 
            IsSelectionEnabled="True" />

        </my:Chart>
        <my:Chart  Name="LineChart1" Title="Top Customer" 
            VerticalAlignment="Top" Margin="404,36,36,0" Height="214">
            <my:LineSeries  DependentValuePath="Value" 
            IndependentValueBinding="{Binding Path=Key}" ItemsSource="{Binding Path=Value}" 
            IsSelectionEnabled="True"/>
        </my:Chart>
        <my:Chart  Name="BarChart1" Title="Top Customer" Margin="234,285,266,-25">
            <my:BarSeries  DependentValuePath="Value" 
            IndependentValueBinding="{Binding Path=Key}" ItemsSource="{Binding Path=Value}" 
            IsSelectionEnabled="True"/>
        </my:Chart>
    </Grid>
</Window>
