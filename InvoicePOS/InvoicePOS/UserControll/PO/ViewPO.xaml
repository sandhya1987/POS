                    <!--<Button Content="Update" Visibility="{Binding UpdVisible}" Command="{Binding UpdatePO, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="575,592,0,0" VerticalAlignment="Top" Width="75"/>-->
                    <Button Content="Cancel" HorizontalAlignment="Left" Command="{Binding Cancel}" Margin="721,592,0,0" VerticalAlignment="Top" Width="75" Height="22"/>
                </Grid>
                <Button Content="--" Command="{Binding ItemListClick}" HorizontalAlignment="Left" Margin="302,238,0,0" VerticalAlignment="Top" Width="24" />
