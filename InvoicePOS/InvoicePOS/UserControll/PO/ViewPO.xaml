                    <TextBlock HorizontalAlignment="Left" Margin="96,50,0,0" TextWrapping="Wrap" Text="PO Number" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="176,50,0,0" TextWrapping="Wrap" Text="{Binding SelectedPO.PO_NUMBER1}" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
