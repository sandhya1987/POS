                            <DataGridTextColumn   Width="100" Header="Item Price Befor TAX"  Binding="{Binding PURCHASE_PRICE_BEFORE_TAX,StringFormat=\{0:c\}}"/>
                            <!--<DataGridTextColumn   Width="200" Header="Item Price"  Binding="{Binding SALES_PRICE,StringFormat=\{0:c\}}"/>-->
                            <!--<DataGridTextColumn   Width="200" Header="Discount"  Binding="{Binding SALES_UNIT}"/>-->
                            <DataGridTextColumn   Width="100" Header="Total Quantity"  Binding="{Binding TOTAL_QTY}"/>
