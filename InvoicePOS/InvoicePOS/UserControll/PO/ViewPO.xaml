                            <DataGridTextColumn   Width="100" Header="Sub Total Befor TAX"  Binding="{Binding SUB_TOTAL_BEFORE_TAX,StringFormat=\{0:c\}}"/>
                            <!--<DataGridTextColumn   Width="200" Header="Tax Name"  Binding="{Binding TAX_PAID_NAME}"/>-->
                            <DataGridTextColumn   Width="100" Header="Tax Percent"  Binding="{Binding TAX_PAID}"/>
                            <!--<DataGridTextColumn   Width="200" Header="Item Unit Price Afte Tax"  Binding="{Binding SUB_TOTAL_AFTER_TAX}"/>-->
                            <DataGridTextColumn   Width="100" Header="Sub Total After Tax"  Binding="{Binding SUB_TOTAL_AFTER_TAX,StringFormat=\{0:c\}}"/>
                            <DataGridTextColumn   Width="100" Header="Effective rate Per unit"  Binding="{Binding PURCHASE_UNIT_PRICE}"/>

                        </DataGrid.Columns>
                        <DataGrid.InputBindings>

                            <KeyBinding Key="Tab"  Command="{Binding CALCULATE}"  />
                            <!--<MouseBinding Gesture="LeftClick" Command="{Binding CALCULATE}" />-->

                        </DataGrid.InputBindings>
                    </DataGrid>
                </Grid>
