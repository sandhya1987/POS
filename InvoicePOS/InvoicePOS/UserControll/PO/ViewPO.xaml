                    <Button Content="--" Command="{Binding SupplierListClick}" HorizontalAlignment="Left" Margin="240,112,0,0" VerticalAlignment="Top" Width="21"/>
                    <Button Content="--" Command="{Binding DeliveryLocation}" HorizontalAlignment="Left" Margin="732,112,0,0" VerticalAlignment="Top" Width="21"/>
                </Grid>
                <Grid>
                    <TextBlock HorizontalAlignment="Left" Margin="68,205,0,0" TextWrapping="Wrap" Text="Barcode" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="68,233,0,0" TextWrapping="Wrap" Text="Item Name" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="68,268,0,0" TextWrapping="Wrap" Text="Search Code" VerticalAlignment="Top"/>
