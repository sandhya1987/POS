                    <TextBox x:Name="Select_BarCodee" HorizontalAlignment="Left" Height="23" Margin="175,205,0,0" TextWrapping="Wrap" Text="{Binding Select_BarCode,UpdateSourceTrigger=PropertyChanged}"   VerticalAlignment="Top" Width="120" IsEnabled="False">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Tab" Command="{Binding TabChangeCode}" />
                            <KeyBinding Key="Enter" Command="{Binding TabChangeCode}" />
                        </TextBox.InputBindings>
                    </TextBox>
                    <TextBox x:Name="textBox5" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="175,233,0,0" TextWrapping="Wrap" Text="{Binding ITEM_NAME}" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
