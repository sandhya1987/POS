                    <TextBox HorizontalAlignment="Left" Height="23" Margin="176,520,0,0" TextWrapping="Wrap" Text="{Binding SelectedPO.TERMS}" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                    <TextBlock HorizontalAlignment="Left" Margin="577,522,0,0" TextWrapping="Wrap" Text="Total Tax" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="555,551,0,0" TextWrapping="Wrap" Text="Total Amount" VerticalAlignment="Top"/>
                    <TextBox x:Name="totTax" HorizontalAlignment="Left" Height="23" Margin="699,520,0,0" TextWrapping="Wrap" Text="{Binding SelectedPO.TOTAL_TAX,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                    <!--<TextBox x:Name="tot" HorizontalAlignment="Left" Height="23" Margin="850,520,0,0" TextWrapping="Wrap" Text="{Binding TOTAL_QTY}" VerticalAlignment="Top" Width="120"/>-->
                    <TextBox x:Name="total" HorizontalAlignment="Left" Height="23" Margin="699,548,0,0" TextWrapping="Wrap" Text="{Binding SelectedPO.TOTAL_AMOUNT,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
